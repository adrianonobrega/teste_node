{
  "compilerOptions": {
    // --- Configurações de Ambiente ---
    
    // Alvo: ES2022 é moderno e compatível com o Node.js 22+
    "target": "ES2022",
    
    // Módulo e Resolução: Use 'NodeNext' para compatibilidade total com módulos ESM do Node.js
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    // Localização dos arquivos fonte
    "rootDir": "./src",
    
    // Onde a saída (build) irá
    "outDir": "./dist",
    
    // Biblioteca padrão do ambiente (essencial para Node)
    "lib": ["es2022"],
    "types": ["node"],

    // --- Resolução de Módulos e Interoperabilidade ---
    
    // Desabilitamos o verbatimModuleSyntax para evitar conflitos com o TS-Node e CommonJS/ESM
    // (A menos que você configure o Node.js de forma estritamente pura para ESM)
    "verbatimModuleSyntax": false,
    
    // Permite a importação de módulos CommonJS (como 'express' ou 'cors') usando a sintaxe 'import default from "package";'
    "esModuleInterop": true,
    
    // Garante que o projeto é um módulo Node.js
    "moduleDetection": "force",
    
    // Garante que a transpilação seja feita por arquivo isolado (ótimo para ferramentas como ts-node)
    "isolatedModules": true,


    // --- Estritas e Qualidade de Código ---
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // --- Outras Opções ---
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"] // Incluir todos os arquivos em 'src'
}